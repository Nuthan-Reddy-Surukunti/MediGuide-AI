<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Photo Demonstration Section - Above the guide content for visual learning -->
        <FrameLayout
            android:id="@+id/photoContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:background="@drawable/card_background">

            <ImageView
                android:id="@+id/ivGuidePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="First aid demonstration photo" />

            <!-- Photo overlay with title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical">

                <!-- Photo indicator -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_photo"
                    android:tint="@android:color/white"
                    android:contentDescription="Demonstration photo" />

                <TextView
                    android:id="@+id/tvPhotoTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Step-by-step demonstration"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- View full size button -->
                <ImageView
                    android:id="@+id/ivPhotoFullscreen"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_fullscreen"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:contentDescription="View full size"
                    android:tint="@android:color/white" />

            </LinearLayout>

        </FrameLayout>

        <!-- Main Guide Content Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Guide Icon - Larger and more prominent -->
            <ImageView
                android:id="@+id/ivGuideImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background"
                android:padding="10dp"
                android:src="@drawable/ic_cpr"
                android:scaleType="centerInside"
                android:contentDescription="Guide illustration" />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Guide Title -->
                <TextView
                    android:id="@+id/tvGuideTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CPR - Adult"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Category -->
                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="CPR"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvGuideDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Cardiopulmonary resuscitation for adults"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <!-- Severity Badge and Video Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Severity Badge -->
                    <TextView
                        android:id="@+id/tvSeverity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/severity_critical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="CRITICAL"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- View Demo Button -->
                    <TextView
                        android:id="@+id/tvViewDemo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_video_play"
                        android:drawablePadding="4dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="View Demo"
                        android:textColor="@color/primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
