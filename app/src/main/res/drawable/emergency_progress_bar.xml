<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/emergency_step_pending" />
            <corners android:radius="@dimen/emergency_progress_height" />
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/emergency_step_complete" />
                <corners android:radius="@dimen/emergency_progress_height" />
            </shape>
        </clip>
    </item>

</layer-list>

