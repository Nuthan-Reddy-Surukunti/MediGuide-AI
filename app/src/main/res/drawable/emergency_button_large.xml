<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/emergency_surface_variant" />
            <corners android:radius="@dimen/emergency_card_radius" />
            <stroke
                android:width="3dp"
                android:color="@color/emergency_on_surface" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/emergency_red" />
            <corners android:radius="@dimen/emergency_card_radius" />
            <stroke
                android:width="2dp"
                android:color="@color/emergency_surface_variant" />
        </shape>
    </item>

</selector>

